import tkFont
import tkMessageBox
import ttk
import Tkinter

home = Tkinter.Tk()
home.geometry('800x600')
home.resizable(width=False, height=False)
home.title('All About Money V.Beta')

#calculator ______ edit by tong
def calcul():
    if moneyentry.get().isdigit() and interestentry.get().isdigit() and yearentry.get().isdigit():
        money = float(moneyentry.get())
        interest = float(interestentry.get())
        year = int(yearentry.get())
        ans = float(money)
        ans2 = 0
        for i in range(year):
            ans += ans / interest
            ans2 += ans / interest
        monthly_interest = interest/(100 * 12)
        payment_number = year * 12
    
        var_1.set("Total loan = $%0.2f" % money)
        var_2.set("Interest   = %0.2f%s" % (interest, "%"))
        var_3.set("Years      = %0.f" % year)
        var_4.set("Number of payments = %0.f" % payment_number)
        var_6.set("-"*60)
        var_7.set("Total cost     = $%0.2f" % ans)
        var_8.set("Total interest = $%0.2f" % (ans - money))
        var_9.set("-"*60)

    else:
        var_1.set('Input must be number')
    
##Label
